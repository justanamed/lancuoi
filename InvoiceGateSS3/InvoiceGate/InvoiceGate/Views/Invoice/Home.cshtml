    <section id="part2">
        <h1 class="text-uppercase text-center pt-5 font-weight-bolder text-white" style="font-family:Arial">
            Tra Cứu Nhanh
        </h1>
        <div class="container  pt-4">
            <div class="row">
                <div class="col-9 bg-white  ml-auto mr-auto" style="height:70vh">
                    <div class="row">
                        <div class="col-5 pt-5 ml-auto mr-auto">
                            <div class="wrap-input2 validate-input" data-validate="User is required">
                                <input id="t1" class="input2" type="text" required name="fastid">
                                <span class="focus-input2" data-placeholder="TÀI KHOẢN"></span>
                            </div>

                            <div class="wrap-input2 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                                <input id="t2" class="input2" type="password" required name="fastpass">
                                <span class="focus-input2" data-placeholder="MẬT KHẨU"></span>
                            </div>
                        </div>
                        <div class="col-5 pt-5 ml-auto mr-auto">
                            <div class="wrap-input2 validate-input" data-validate="Name is required">
                                <input id="t3" class="input2" type="text" required name="masothue">
                                <span class="focus-input2" data-placeholder="MÃ SỐ THUẾ BÊN BÁN"></span>
                            </div>

                            <div class="wrap-input2 validate-input" data-validate="">
                                <input id="t4" class="input2" type="text" required name="sohoadon">
                                <span class="focus-input2" data-placeholder="SỐ HÓA ĐƠN"></span>
                            </div>
                            <style>
                                #datetimepicker1 .form-control {
                                    outline: none !important;
                                }
                            </style>
                            <div class="input-group validate-input wrap-input2 date" id="datetimepicker1">
                                <input id="t5" type="text" class="input2 form-control" value="" style="border:none !important" />
                                <span class="focus-input2" data-placeholder="NGÀY LẬP HÓA ĐƠN"></span>
                                <span class="input-group-addon">
                                    <i class="fas fa-calendar"></i>
                                </span>
                            </div>
                            <script>
                                $('#datetimepicker1').datetimepicker({
                                    format: 'YYYY/MM/DD HH:mm:ss',
                                    sideBySide: true

                                });
                            </script>
                            <div class="wrap-input2 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                                <input id="t6" class="input2" type="text" required name="mabimat">
                                <span class="focus-input2" data-placeholder="MÃ SỐ BÍ MẬT"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <button onclick="teamchungta()" class="btn font-weight-bolder text-white col-4 ml-auto mr-auto btn-search-fast">Tìm kiếm</button>
                        <script>
                                function teamchungta() {
                                    //string tk, string mk, string mast, string shd, DateTime ngaylap, string mabm
                                    var v1 = document.getElementById("t1").value;
                                    var v2 = document.getElementById("t2").value;
                                    var v3 = document.getElementById("t3").value;
                                    var v4 = document.getElementById("t4").value;
                                    var v5 = document.getElementById("t5").value;
                                    var v6 = document.getElementById("t6").value;

                                    $.ajax({
                                    url: '@Url.Content("~/")' + "Invoice/Getitem",
                                    type: 'POST',
                                        data: {
                                            tk: v1,
                                            mk: v2,
                                            mast: v3,
                                            shd: v4,
                                            ngay: v5,
                                            mabm: v6
                                        },
                                    dataType: 'json',
                                            success: function (data1) {
                                                var x = JSON.parse(JSON.stringify(data1["value"]));
                                                var y = JSON.stringify(JSON.parse(x)["fileToBytes"]);
                                                var z = y.replace("\"", "");
                                                $('#myModal2').modal('show');
                                                document.getElementById("hienthi").src = "data:application/pdf;base64," + z.replace("\"", "");
                                            }
                                    });
                                }
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </section>
